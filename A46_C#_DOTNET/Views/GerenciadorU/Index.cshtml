@model Agencia46.Models.Usuarios;

@{
    ViewData["Title"] = "Gerenciamento";
    var usuarios = ViewData["usuarios"] as List<Usuarios>;
}

<section class="gerencia">
    <div class="container">
        <div class="title">
            <h4 class="title-primary">Gerenciamento de</h4>
            <h1 class="h1 h1-responsive title-secondary">Usuários</h1>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="tocenter">
                <h2>Usuários Cadastrados</h2>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>CPF</th>
                            <th>Endereco</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var usuario in usuarios)
                            {
                                <tr>
                                    <td>@usuario.Id</td>
                                    <td>@usuario.Nome</td>
                                    <td>@usuario.Email</td>
                                    <td>@usuario.CPF</td>
                                    <td>@usuario.Endereco</td>
                                    <td>
                                        <form asp-controller="GerenciadorU" asp-action="Deletar">
                                            <button class="btn btn-danger" type="submit">Deletar</button>
                                            <input asp-for="Id" style="visibility:hidden;" type="text" value="@usuario.Id">
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                </div>

                <hr />
                <div class="d-flex mb-3">
                    <div class="me-auto p-2">
                        <h2>Cadastrar</h2>
                        <form asp-controller="GerenciadorU" asp-action="Index">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="">Nome completo</label>
                                    <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Bruna Lins">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">Email</label>
                                    <input asp-for="Email" type="text" class="form-control" id="" placeholder="email@email.com">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">CPF</label>
                                    <input asp-for="CPF" type="text" class="form-control" id="" placeholder="00000000000000">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">Endereco</label>
                                    <input asp-for="Endereco" type="text" class="form-control" id="">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Incluir</button>
                        </form>
                    </div>

                    <div class="ms-auto p2">
                        <h2>Atualizar Dados</h2>
                        <form asp-controller="GerenciadorU" asp-action="Atualizar">

                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label for="">ID do Usuário</label>
                                    <select class="custom-select" asp-for="Id">
                                        <option selected>Selecione um ID</option>
                                        @{
                                            foreach (var usuario in usuarios)
                                            {
                                                <option>@usuario.Id</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="">Nome Completo</label>
                                    <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Bruna Lins">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">Email</label>
                                    <input asp-for="Email" type="text" class="form-control" id="" placeholder="email@email.com">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">CPF</label>
                                    <input asp-for="CPF" type="text" class="form-control" id="" placeholder="00000000000000">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">Endereco</label>
                                    <input asp-for="Endereco" type="text" class="form-control" id="">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Atualizar</button>
                        </form>
                    </div>
                </div>


            </div>
        </div>
    </div>
</section>