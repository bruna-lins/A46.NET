@model Agencia46.Models.Destinos;

@{
    ViewData["Title"] = "Gerenciamento";
    var destinos = ViewData["destinos"] as List<Destinos>;
}

<section class="gerencia">
    <div class="container">
        <div class="title">
            <h4 class="title-primary">Gerenciamento de</h4>
            <h1 class="h1 h1-responsive title-secondary">Destinos</h1>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="tocenter">
                    <h2>Destinos Cadastrados</h2>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Pais</th>
                                <th>Preco</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var destino in destinos)
                                {
                                    <tr>
                                        <td>@destino.Id_Destino</td>
                                        <td>@destino.Nome_Dest</td>
                                        <td>@destino.Pais</td>
                                        <td>@destino.Preco</td>
                                        <td>@destino.Status</td>
                                        <td>
                                            <form asp-controller="GerenciadorD" asp-action="Deletar">
                                                <button class="btn btn-danger" type="submit">Deletar</button>
                                                <input asp-for="Id_Destino" style="visibility:hidden;" type="text" value="@destino.Id_Destino">
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <hr />
                <div class="d-flex mb-3">
                    <div class="me-auto p-2">
                        <h2>Cadastrar</h2>
                        <form asp-controller="GerenciadorD" asp-action="Index">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="">Nome</label>
                                    <input asp-for="Nome_Dest" type="text" class="form-control" id="" placeholder="Recife">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">Pais</label>
                                    <input asp-for="Pais" type="text" class="form-control" id="" placeholder="Brasil">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">Preço R$</label>
                                    <input asp-for="Preco" type="text" class="form-control" id="" placeholder="350,00">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">Status</label>
                                    <select class="custom-select" asp-for="Status">
                                        <option selected>Selecione uma opção</option>
                                        <option>Ativo</option>
                                        <option>Inativo</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Incluir</button>
                        </form>
                    </div>

                    <div class="ms-auto p2">
                        <h2>Atualizar Dados</h2>
                        <form asp-controller="GerenciadorD" asp-action="Atualizar">

                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label for="">ID do Destino</label>
                                    <select class="custom-select" asp-for="Id_Destino">
                                        <option selected>Selecione um ID</option>
                                        @{
                                            foreach (var destino in destinos)
                                            {
                                                <option>@destino.Id_Destino</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="">Nome</label>
                                    <input asp-for="Nome_Dest" type="text" class="form-control" id="" placeholder="Recife">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">Pais</label>
                                    <input asp-for="Pais" type="text" class="form-control" id="" placeholder="Brasil">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">Preço</label>
                                    <input asp-for="Preco" type="text" class="form-control" id="" placeholder="350,00">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="">Status</label>
                                    <select class="custom-select" asp-for="Status">
                                        <option selected>Selecione uma opção</option>
                                        <option>Ativo</option>
                                        <option>Inativo</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Atualizar</button>
                        </form>
                    </div>
                </div>


            </div>
        </div>
    </div>
</section>